{
    "name": "p2pt",
    "version": "1.5.1",
    "description": "P2P connections with WebTorrent trackers",
    "main": "dist/p2pt-node.js",
    "browser": "dist/p2pt.js",
    "types": "types/p2pt.d.ts",
    "scripts": {
        "build": "npm run prettify-all && rollup -c rollup.config.js",
        "watch": "rollup -cw rollup.config.js",
        "prettify-all": "npx prettier --write p2pt.ts node.ts",
        "test-browser": "BROWSER_TEST=1 airtap --local test/*.js",
        "test-node": "node test/*.js",
        "test:all": "npm run test-node && npm run test-browser",
        "test": "start-server-and-test 'node start-trackers.js' 5002 test:all"
    },
    "dependencies": {
        "bittorrent-tracker": "^9.14.5",
        "nanoid": "^3.1.32",
        "randombytes": "^2.1.0",
        "simple-sha1": "^3.0.1"
    },
    "devDependencies": {
        "@rollup/plugin-typescript": "^8.3.0",
        "@types/debug": "^4.1.7",
        "@types/randombytes": "^2.0.0",
        "@types/simple-peer": "^9.11.4",
        "@types/simple-sha1": "^3.0.0",
        "airtap": "^3.0.0",
        "browserify": "^16.5.1",
        "esbuild": "^0.14.11",
        "rollup": "^2.64.0",
        "rollup-plugin-dts": "^4.1.0",
        "rollup-plugin-esbuild": "^4.8.2",
        "start-server-and-test": "^1.11.2",
        "tape": "^5.0.1",
        "tinyify": "^3.0.0",
        "typescript": "^4.5.4",
        "wrtc": "^0.4.7"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/subins2000/p2pt.git"
    },
    "keywords": [
        "webtorrent",
        "p2p",
        "simple-peer",
        "peer"
    ],
    "author": "subins2000",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/subins2000/p2pt/issues"
    },
    "homepage": "https://github.com/subins2000/p2pt#readme"
}
